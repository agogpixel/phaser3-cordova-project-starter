<?xml version='1.0' encoding='utf-8'?>
<widget id="com.agogpixel.phaser3CordovaProjectStarter" version="0.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
	<name>Phaser 3 Cordova Project Starter</name>

	<description>Phaser 3 project starter with Cordova.</description>

	<author email="kidthales@agogpixel.com" href="https://tristan.agogpixel.com">
		kidthales
	</author>

	<content src="index.html" />

	<access origin="*" />

	<allow-intent href="http://*/*" />
	<allow-intent href="https://*/*" />
	<allow-intent href="tel:*" />
	<allow-intent href="sms:*" />
	<allow-intent href="mailto:*" />
	<allow-intent href="geo:*" />

	<platform name="android">
		<allow-intent href="market:*" />
		<edit-config file="AndroidManifest.xml" mode="merge" target="/manifest/application">
			<application android:usesCleartextTraffic="true" />
		</edit-config>
	</platform>

	<platform name="ios">
		<allow-intent href="itms:*" />
		<allow-intent href="itms-apps:*" />
	</platform>
</widget>
